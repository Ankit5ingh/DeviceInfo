<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.SensorPage">

    <LinearLayout
        android:id="@+id/accelerometer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accelerometer"
            android:padding="5dp"
            android:textAlignment="textStart"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="7dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/accelerometer_x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X: "
                android:textAlignment="textStart"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/accelerometer_x_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:padding="5dp"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/accelerometer_y"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=", Y: "
                android:textAlignment="textStart"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/accelerometer_y_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:padding="5dp"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/accelerometer_z"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=", Z: "
                android:textAlignment="textStart"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/accelerometer_z_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:padding="5dp"
                android:textSize="16sp" />

        </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/light_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="textStart"
            android:text="Light illuminance"
            android:paddingHorizontal="7dp"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/light_lx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="7dp"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lux"
            android:layout_marginEnd="7dp"/>



    </LinearLayout>

</LinearLayout>
